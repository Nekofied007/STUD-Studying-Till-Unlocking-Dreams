{
	"version": 2,
	"installCommand": "corepack enable && corepack prepare pnpm@9 --activate && pnpm install --no-frozen-lockfile",
	"buildCommand": "pnpm build",
	"outputDirectory": "dist/spa",
	"functions": {
		"api/**/*": {
			"runtime": "nodejs20.x"
		}
	},
	"rewrites": [
		{ "source": "/api/(.*)", "destination": "/api/$1" },
		{ "source": "/(.*)", "destination": "/index.html" }
	]
}
